set number
set mouse=a
set numberwidth=1
set clipboard=unnamedplus
syntax enable
set showcmd
set ruler
set encoding=utf-8
set showmatch
set sw=2
set relativenumber
set laststatus=2
set cursorline

call plug#begin('~/.vim/plugged')

" Temas
Plug 'morhetz/gruvbox'

" Easymotion: sirve para navegación con
" keyLeader+compañero+2letras
Plug 'easymotion/vim-easymotion'

" Nerdree: sirve para abrir visor de archivos
" con <Leader>nt y para quitOnOpen
Plug 'scrooloose/nerdtree'

" TmuxNavigator: sirve para navegar entre instancias
" de vim con HJKL
Plug 'christoomey/vim-tmux-navigator'

" FZF: sirve para buscarme de la mejor manera los archivos
" que podría estar necesitando
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }

" VimAirline: sirve para mostrar una mejor barra 
" en VIM
Plug 'vim-airline/vim-airline'

call plug#end()

colorscheme gruvbox
let g:gruvbox_contrast_dark = "hard"
let NERDTreeQuitOnOpen = 1
let g:airline_powerline_fonts=1

" ------------------------------------
" ATAJOS PERSONALIZADOS:
" ejemplo <Leader>w :w<CR>

let mapleader=" "
nmap <Leader>s <Plug>(easymotion-s2)
nmap <Leader>n :NERDTreeFind<CR>
nmap <Leader>b :bp<CR>
nmap <Leader>f :FZF<CR>
nmap <Leader>c :cd..<CR>
